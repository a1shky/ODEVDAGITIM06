<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ödev Portalı</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/admin_template/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body id="page-top">

    <div id="wrapper">

        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@(User.IsInRole("Admin") ? "/Admin" : "/Ogrenci")">
                <div class="sidebar-brand-icon rotate-n-15">
                    @if (User.IsInRole("Admin"))
                    {
                        <i class="fas fa-laugh-wink"></i>
                    }
                    else
                    {
                        <i class="fas fa-user-graduate"></i>
                    }
                </div>
                <div class="sidebar-brand-text mx-3">
                    @(User.IsInRole("Admin") ? "ADMIN PANELİ" : "ÖĞRENCİ PANELİ")
                </div>
            </a>

            <hr class="sidebar-divider my-0">

            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item active">
                    <a class="nav-link" href="/Admin">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <span>Ana Sayfa</span>
                    </a>
                </li>

                <hr class="sidebar-divider">

                <div class="sidebar-heading">Yönetim</div>

                <li class="nav-item">
                    <a class="nav-link" href="/Ders">
                        <i class="fas fa-fw fa-book"></i>
                        <span>Ders Yönetimi</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Odev">
                        <i class="fas fa-fw fa-tasks"></i>
                        <span>Ödev Yönetimi</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Teslim">
                        <i class="fas fa-fw fa-clipboard-check"></i>
                        <span>Teslim Yönetimi</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Kullanici" asp-action="Index">
                        <i class="fas fa-fw fa-users"></i>
                        <span>Kullanıcı Yönetimi</span>
                    </a>
                </li>
            }

            @if (User.IsInRole("Ogrenci"))
            {
                <li class="nav-item active">
                    <a class="nav-link" href="/Ogrenci">
                        <i class="fas fa-fw fa-graduation-cap"></i> <span>Ödevlerim</span>
                    </a>
                </li>
            }

            <hr class="sidebar-divider d-none d-md-block">
        </ul>
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <h1 class="h3 mb-0 text-gray-800">Ödev Dağıtım Portalı</h1>
                    <ul class="navbar-nav ml-auto">
                        <div class="topbar-divider d-none d-sm-block"></div>

                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@User.Identity.Name</span>
                                <i class="fas fa-user-circle fa-lg"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">

                                <a class="dropdown-item" href="/Account/Logout">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Çıkış Yap
                                </a>

                            </div>
                        </li>
                    </ul>
                </nav>

                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Ödev Dağıtım Portalı 2025</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin_template/js/sb-admin-2.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        var connection = new signalR.HubConnectionBuilder()
            .withUrl("/bildirimHub")
            .build();

        connection.on("YeniOdevGeldi", function (ogrenciAdi) {
            // Bildirimi sadece Admin rolündekilere gösterelim
            // (Opsiyonel: Eğer öğrenci kendi yüklediğinde de görsün istiyorsan burayı elleme)
            Swal.fire({
                title: 'Yeni Ödev Geldi! 🔔',
                text: ogrenciAdi + ' isimli öğrenci ödevini teslim etti.',
                icon: 'info',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 6000,
                timerProgressBar: true
            });
        });

        connection.start().catch(function (err) {
            return console.error(err.toString());
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>