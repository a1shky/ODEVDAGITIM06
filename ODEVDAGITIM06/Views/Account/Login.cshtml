@model ODEVDAGITIM06.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Genel site şablonunu kullan
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card shadow mt-5">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title text-center mb-0">Giriş Yap</h3>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label class="form-label">E-Posta</label>
                        <!-- LoginViewModel'de Username dediğimiz yere E-posta girilecek -->
                        <input asp-for="Username" class="form-control" placeholder="ornek@email.com" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                Hesabınız yok mu? <a asp-action="Register">Kayıt Olun</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}