@model IEnumerable<ODEVDAGITIM06.Models.Teslim>

@{
    ViewData["Title"] = "Teslim Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Teslim Yönetimi</h1>
<p class="mb-4">
    Öğrenciler tarafından teslim edilen tüm ödevleri burada görebilir, notlandırabilir veya silebilirsiniz.
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Teslim Listesi</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Öğrenci</th>
                        <th>Ders / Ödev</th>
                        <th>Teslim Tarihi</th>
                        <th>Teslim Edilen Dosya</th>
                        <th>Not</th>
                        <th style="width: 150px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (item.Ogrenci != null)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="icon-circle bg-primary text-white mr-2" style="width: 35px; height: 35px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div>
                                            <div class="font-weight-bold text-dark">@item.Ogrenci.Ad @item.Ogrenci.Soyad</div>
                                            <div class="small text-muted">No: @item.Ogrenci.OgrenciNo</div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <span class="badge badge-warning">Öğrenci Bilgisi Yok</span>
                                }
                            </td>

                            <td>
                                <strong>Ders:</strong> @item.Odev?.Ders?.DersAdi <br />
                                <strong>Ödev:</strong> @item.Odev?.OdevBasligi
                            </td>

                            <td>@item.TeslimTarihi.ToString("dd.MM.yyyy HH:mm")</td>

                            <td>
                                @if (!string.IsNullOrEmpty(item.DosyaYolu))
                                {
                                    // Ters slash varsa düzelt ve başına / ekle
                                    string duzgunYol = item.DosyaYolu.Replace("\\", "/");
                                    if (!duzgunYol.StartsWith("/")) { duzgunYol = "/" + duzgunYol; }

                                    <a href="@Url.Content(duzgunYol)" target="_blank" class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-file-download"></i> İndir
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted small">(Dosya Yok)</span>
                                }
                            </td>

                            <td>
                                @if (item.Not.HasValue)
                                {
                                    <span class="font-weight-bold @(item.Not >= 50 ? "text-success" : "text-danger")">
                                        @item.Not
                                    </span>
                                }
                                else
                                {
                                    <span>—</span>
                                }
                            </td>

                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="NotVer" asp-route-id="@item.TeslimId" class="btn btn-info btn-sm" title="Not Ver">
                                        <i class="fas fa-edit"></i> Not
                                    </a>

                                    <a asp-action="Sil" asp-route-id="@item.TeslimId" class="btn btn-danger btn-sm ml-1"
                                       onclick="return confirm('Bu teslimi silmek istediğine emin misin? Bu işlem geri alınamaz!');" title="Sil">
                                        <i class="fas fa-trash"></i> Sil
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>