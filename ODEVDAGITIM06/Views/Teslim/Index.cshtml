@model IEnumerable<ODEVDAGITIM06.Models.Teslim>
@* O hatalı @using System.IO; satırı buradan kaldırıldı *@

@{
    ViewData["Title"] = "Teslim Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Teslim Yönetimi</h1>
<p class="mb-4">
    Öğrenciler tarafından teslim edilen tüm ödevleri burada görebilir ve notlandırabilirsiniz.
</p>

<!-- Teslim Listesi Tablosu -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Teslim Listesi</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ders / Ödev</th>
                        <th>Teslim Tarihi</th>
                        <th>Teslim Edilen Dosya</th>
                        <th>Not</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>Ders:</strong> @item.Odev?.Ders?.DersAdi <br />
                                <strong>Ödev:</strong> @item.Odev?.OdevBasligi
                            </td>
                            <td>@item.TeslimTarihi.ToString("dd.MM.yyyy HH:mm")</td>

                            <!-- GÜNCELLENDİ: Hatanın düzeltilmiş hali (Tam yoluyla) -->
                            <td>
                                @if (!string.IsNullOrEmpty(item.DosyaYolu))
                                {
                                    <!-- DÜZELTME: System.IO.Path.GetFileName kullandık -->
                                    <a href="@Url.Content(item.DosyaYolu)" target="_blank" class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-file-download"></i> @System.IO.Path.GetFileName(item.DosyaYolu)
                                    </a>
                                }
                                else
                                {
                                    <span>(Dosya Yok)</span>
                                }
                            </td>

                            <td>
                                @(item.Not.HasValue? item.Not.ToString() : "—")
                            </td>
                            <td>
                                <a asp-action="NotVer" asp-route-id="@item.TeslimId" class="btn btn-info btn-sm">
                                    <i class="fas fa-edit"></i> Not Ver
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>