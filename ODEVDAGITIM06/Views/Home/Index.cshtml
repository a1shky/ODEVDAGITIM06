@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero / Karşılama Alanı -->
<div class="text-center p-5 mb-5 bg-light rounded-3 shadow-sm">
    <h1 class="display-4 fw-bold text-dark">Ödev Dağıtım Portalı</h1>
    <p class="lead text-muted">Öğretmen ve öğrencilerin buluşma noktası.</p>
    <hr class="my-4 w-50 mx-auto">
    <p>Lütfen giriş yapmak için rolünüzü seçin.</p>
</div>

<!-- Kartlar Alanı -->
<div class="row justify-content-center g-4">

    <!-- 1. KART: Admin Girişi -->
    <div class="col-md-5 col-lg-4">
        <div class="card h-100 shadow border-0 card-hover">
            <div class="card-body text-center p-5">
                <div class="mb-4">
                    <i class="fas fa-user-shield fa-5x text-primary"></i>
                </div>
                <h3 class="card-title fw-bold text-primary">Yönetici / Öğretmen</h3>
                <p class="card-text text-muted my-4">
                    Ders yönetimi, ödev atama ve notlandırma işlemleri için giriş yapın.
                </p>
                <a href="/Account/Login" class="btn btn-primary btn-lg w-100 rounded-pill">
                    <i class="fas fa-sign-in-alt me-2"></i> Giriş Yap
                </a>
            </div>
        </div>
    </div>

    <!-- 2. KART: Öğrenci Girişi -->
    <div class="col-md-5 col-lg-4">
        <div class="card h-100 shadow border-0 card-hover">
            <div class="card-body text-center p-5">
                <div class="mb-4">
                    <i class="fas fa-user-graduate fa-5x text-success"></i>
                </div>
                <h3 class="card-title fw-bold text-success">Öğrenci Girişi</h3>
                <p class="card-text text-muted my-4">
                    Ödevlerinizi görüntülemek, dosya yüklemek ve notlarınızı öğrenmek için giriş yapın.
                </p>

                <!-- DÜZELTME: 'disabled' sınıfını kaldırdık ve linki verdik -->
                <a href="/Account/Login" class="btn btn-success btn-lg w-100 rounded-pill">
                    <i class="fas fa-sign-in-alt me-2"></i> Giriş Yap
                </a>

            </div>
        </div>
    </div>

</div>