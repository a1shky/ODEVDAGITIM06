@model IEnumerable<ODEVDAGITIM06.Models.Odev>

@{
    ViewData["Title"] = "Ödevlerim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-user-graduate"></i> Ödevlerim</h1>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <div class="card shadow py-5">
                    <div class="card-body">
                        <i class="fas fa-folder-open fa-3x mb-3 text-gray-300"></i>
                        <h5 class="text-gray-500">Henüz atanmış bir ödeviniz bulunmuyor.</h5>
                    </div>
                </div>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2 hover-effect">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        @item.Ders?.DersKodu
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@item.OdevBasligi</div>
                                    <p class="mt-2 text-muted small">
                                        @(item.Aciklama.Length > 80 ? item.Aciklama.Substring(0, 80) + "..." : item.Aciklama)
                                    </p>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                                </div>
                            </div>
                            <hr class="sidebar-divider my-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-danger font-weight-bold">
                                    <i class="far fa-clock"></i> @item.TeslimTarihi.ToString("dd.MM.yyyy HH:mm")
                                </small>
                            </div>
                            <div class="mt-3">
                                <a asp-controller="Ogrenci" asp-action="Yukle" asp-route-id="@item.OdevId" class="btn btn-primary btn-sm btn-block">
                                    <i class="fas fa-upload"></i> Ödev Yükle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>