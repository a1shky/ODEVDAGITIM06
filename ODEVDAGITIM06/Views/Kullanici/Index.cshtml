@model IEnumerable<ODEVDAGITIM06.Models.ApplicationUser>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    // İŞTE ÇÖZÜM BURADA: _AdminLayout dedik, artık mavi menü gelecek.
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">Kullanıcı Yönetimi</h1>
    <p class="mb-4">Sistemdeki kayıtlı öğrencileri buradan görebilir ve yönetebilirsiniz.</p>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary">
            <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-users"></i> Öğrenci Listesi</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Öğrenci No</th>
                            <th>Ad Soyad</th>
                            <th>Email Adresi</th>
                            <th>Yetki</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    @if (string.IsNullOrEmpty(user.OgrenciNo))
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                    else
                                    {
                                        @user.OgrenciNo
                                    }
                                </td>
                                <td>@user.Ad @user.Soyad</td>
                                <td>@user.Email</td>
                                <td>
                                    @if (user.Email == "sau@sau.edu.tr" || user.Email == "admin@odevportali.com")
                                    {
                                        <span class="badge badge-danger">Yönetici (Admin)</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-info">Öğrenci</span>
                                    }
                                </td>
                                <td>
                                    @if (user.Email != "sau@sau.edu.tr")
                                    {
                                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm"
                                           onclick="return confirm('Bu kullanıcıyı ve tüm ödevlerini silmek istediğinize emin misiniz?');">
                                            <i class="fas fa-trash"></i> Sil
                                        </a>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-sm" disabled>Silinemez</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>