@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Güncellediğimiz ana şablonu kullan
}

<!-- YENİ EKLENDİ: Jumbotron (Büyük Başlık Alanı) -->
<div class="text-center p-5 mb-4 bg-light rounded-3 shadow-sm">
    <h1 class="display-4 fw-bold">Ödev Dağıtım Portalına Hoş Geldiniz</h1>
    <p class="lead text-muted">Lütfen giriş yapmak için rolünüzü seçin.</p>
</div>

<!-- GÜNCELLENDİ: Kartlar (İkonlar ve Hover Efekti Eklendi) -->
<div class="row justify-content-center g-4">

    <!-- 1. KART: Admin Girişi -->
    <div class="col-md-5">
        <!-- 'card-hover' sınıfını CSS'te tanımlayacağız -->
        <div class="card h-100 shadow-sm border-primary card-hover">
            <div class="card-body text-center p-5 d-flex flex-column justify-content-between">
                <div>
                    <!-- YENİ EKLENDİ: İkon -->
                    <i class="fas fa-user-shield fa-4x text-primary mb-4"></i>
                    <h5 class="card-title fs-3 text-primary">Yönetici / Öğretmen Girişi</h5>
                    <p class="card-text my-4">Dersleri yönetmek, ödev eklemek ve teslimleri notlandırmak için buradan giriş yapın.</p>
                </div>
                <!-- Bu link /Login controller'ına (bizim yaptığımız admin girişi) gider -->
                <a href="/Login" class="btn btn-primary btn-lg">Admin Girişi</a>
            </div>
        </div>
    </div>

    <!-- 2. KART: Öğrenci Girişi (Finalde yapılacak) -->
    <div class="col-md-5">
        <!-- 'card-hover' sınıfını CSS'te tanımlayacağız -->
        <div class="card h-100 shadow-sm border-secondary card-hover">
            <div class="card-body text-center p-5 d-flex flex-column justify-content-between">
                <div>
                    <!-- YENİ EKLENDİ: İkon -->
                    <i class="fas fa-user-graduate fa-4x text-secondary mb-4"></i>
                    <h5 class="card-title fs-3 text-secondary">Öğrenci Girişi</h5>
                    <p class="card-text my-4">Derslerinize ait ödevleri görmek, teslim etmek ve notlarınızı görüntülemek için buradan giriş yapın.</p>
                </div>
                <!-- Bu linki Finalde yapacağız, şimdilik çalışmıyor (disabled) -->
                <a href="#" class="btn btn-secondary btn-lg disabled" aria-disabled="true" style="opacity: 0.7;">
                    Öğrenci Girişi (Yakında)
                </a>
            </div>
        </div>
    </div>

</div>