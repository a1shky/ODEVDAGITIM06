<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- FontAwesome (İkonlar) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Admin şablonumuzun CSS dosyası -->
    <link href="~/admin_template/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar (Sol Menü) -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Marka -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/Admin">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">ADMIN PANELİ</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Ana Sayfa -->
            <li class="nav-item active">
                <a class="nav-link" href="/Admin">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Ana Sayfa</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Başlık -->
            <div class="sidebar-heading">
                Yönetim
            </div>

            <!-- Menü Linkleri -->
            <li class="nav-item">
                <a class="nav-link" href="/Ders">
                    <i class="fas fa-fw fa-book"></i>
                    <span>Ders Yönetimi</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Odev">
                    <i class="fas fa-fw fa-tasks"></i>
                    <span>Ödev Yönetimi</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Teslim">
                    <i class="fas fa-fw fa-clipboard-check"></i>
                    <span>Teslim Yönetimi</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-fw fa-users"></i>
                    <span>Kullanıcı Yönetimi</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar (Üst Menü) -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <h1 class="h3 mb-0 text-gray-800">Ödev Dağıtım Portalı</h1>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- Oturum Açan Kullanıcı Bilgisi ve Çıkış Butonu -->
                        <div class="topbar-divider d-none d-sm-block"></div>

                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@User.Identity.Name</span>
                                <i class="fas fa-user-circle fa-lg"></i>
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                 aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="/Login/Logout">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Çıkış Yap
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Sayfa İçeriği Başlangıcı -->
                <div class="container-fluid">
                    <!-- Burası dinamik içeriğin (View'lerimizin) geleceği yer -->
                    @RenderBody()
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Ödev Dağıtım Portalı 2025</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- jQuery (CDN) - SB Admin 2 (Bootstrap 4) için gerekli -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- DÜZELTME: SB Admin 2 şablonu Bootstrap 4 kullanır. Projenin varsayılan BS5 JS'si yerine BS4 JS'yi CDN'den çekiyoruz. -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Admin şablonumuzun JS dosyasını çağırıyoruz -->
    <script src="~/admin_template/js/sb-admin-2.min.js"></script>

    <!-- O GEREKSİZ SCRIPT SATIRI (unobtrusive-ajax) BURADAN SİLİNDİ -->
    <!-- Diğer sayfalardan özel script'ler gerekirse buraya gelir -->
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>